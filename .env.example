# Puerto del servidor
PORT=3000

# Base de datos PostgreSQL
# Formato: postgresql://usuario:password@host:puerto/nombre_db
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tallerflow

# Seguridad de sesión (panel owner/mecánico)
JWT_SECRET=CAMBIA_ESTE_SECRET_LARGO_EN_PRODUCCION
JWT_EXPIRES_IN=12h

# Credenciales del panel
OWNER_USERNAME=owner
OWNER_PASSWORD=LanceSystem!@2026
OWNER_WORKSHOP_SLUG=

DUENO_USERNAME=dueno
DUENO_PASSWORD=dueno12345
DUENO_WORKSHOP_SLUG=alua-odon-motor

MECHANIC_USERNAME=mecanico
MECHANIC_PASSWORD=mecanico12345
MECHANIC_WORKSHOP_SLUG=alua-odon-motor

# Seguridad HTTP / reverse proxy
NODE_ENV=production
FORCE_HTTPS=true
CORS_ORIGIN=https://lancesystems.com

# Arquitectura multi-producto
BASE_PATH=/tallerflow
APP_DOMAIN=lancesystems.com

# Rate limit para tracking público
TRACKING_RATE_WINDOW_MS=900000
TRACKING_RATE_MAX=80

# Recordatorio go-live piloto:
# Antes de abrir la primera versión en producción, activar snapshots automáticos diarios en PostgreSQL.

# WhatsApp Business API (Cloud API - Meta)
# Habilitar envío de notificaciones por WhatsApp
WHATSAPP_ENABLED=false
# Token de acceso permanente de WhatsApp Business API
WHATSAPP_TOKEN=
# ID del número de teléfono de WhatsApp Business
WHATSAPP_PHONE_ID=